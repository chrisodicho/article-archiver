{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDirs": ["src"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["bin", "lib", "node_modules"]
}
